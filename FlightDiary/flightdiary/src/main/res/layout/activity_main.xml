<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.flightdiary.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:textSize="20dp"
        android:text="Last Flight Added"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/FlightNumberMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:textSize="18dp"
            android:paddingTop="8dp"
            android:text="Flight Number" />

        <TextView
            android:id="@+id/AirlineMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            android:paddingLeft="15dp"
            android:text="Airline" />

        <TextView
            android:id="@+id/dateMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/AirlineMain"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:text="Date" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/totalData"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:text="Total flights in Database: 0"
        
        />


</LinearLayout>
